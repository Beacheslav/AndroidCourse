<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/battery_button"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:drawableBottom="@android:drawable/ic_lock_idle_low_battery"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="5dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:drawableBottom="@android:drawable/ic_menu_compass"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="5dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_view_navifation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Текущее местоположение"
        app:layout_constraintBottom_toTopOf="@+id/location_button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/text_view_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Текущий статус батареи"
        app:layout_constraintTop_toBottomOf="@+id/battery_button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="5dp" />

</android.support.constraint.ConstraintLayout>